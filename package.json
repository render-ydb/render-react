{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "lint-staged",
    "prepublishOnly": "npm run lint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,ts}": [
      "eslint --ext .js,.ts,.jsx,.tsx --fix --quiet",
      "git add"
    ]
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "lint-staged": "^13.2.3",
    "moga-lint": "^1.0.1",
    "rollup": "^3.26.2"
  }
}
